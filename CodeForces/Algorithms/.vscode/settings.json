{
  //===------------- VS CODE SETTINGS FOR COMPETITIVE PROGRAMMING --------------===//

  //===------------ Editor Configuration -------------===//
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "off",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.rulers": [85, 120],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // Fast typing for contests
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggestOnTriggerCharacters": true,

  //===------------- C/C++ Configuration -------------===//
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.errorSquiggles": "disabled",
  "C_Cpp.configurationWarnings": "disabled",

  //===------------ Clangd Configuration -------------===//
  "clangd.onConfigChanged": "restart",
  "clangd.arguments": [
    "--all-scopes-completion",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "--background-index",
    "--pch-storage=memory",
    "--query-driver=/usr/bin/clang++,/usr/bin/clang++-*,/usr/bin/g++,/usr/bin/g++-*,/usr/local/bin/clang++,/usr/local/bin/clang++-*,/usr/local/bin/g++,/usr/local/bin/g++-*,/opt/homebrew/bin/clang++,/opt/homebrew/bin/clang++-*,/opt/homebrew/bin/g++,/opt/homebrew/bin/g++-*,/opt/llvm/bin/clang++,/opt/llvm/bin/clang++-*"
  ],
  "clangd.detectExtensionConflicts": true,
  "clangd.checkUpdates": false,
  "cmake.useCMakePresets": "always",
  "cmake.configureOnOpen": false,
  "cmake.buildBeforeRun": false,

  //===--------- Build and Run Configuration ---------===//
  "code-runner.executorMap": {
    "cpp": "cd \"$workspaceRoot\" && cpptools go $fileNameWithoutExt"
  },
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.clearPreviousOutput": true,

  //===----------- Terminal Configuration ------------===//
  "terminal.integrated.cwd": "${workspaceFolder}",

  //===------ Competitive Programming Specific -------===//
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "editor.formatOnSave": true,
  "editor.trimAutoWhitespace": true,

  //===--------- Language Server Priorities ----------===//
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.semanticHighlighting.enabled": true
  },

  //===---------- Problem Solving Workflow -----------===//
  "workbench.editor.enablePreview": false, // Always open new tabs
  "workbench.editor.showTabs": "multiple",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  //===------------- Debug Configuration -------------===//
  "debug.console.fontSize": 13,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/compile_commands.json",

  //===-------------- Files and Search ---------------===//
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.o": true,
    "**/*.exe": true,
    "**/compile_commands.json": false // Keep visible for debugging
  },
  "search.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/*.o": true
  },

